---
interface Props{
  name: string,
  url: string,
  isDetail?: boolean,
}


const { name, url, isDetail = false } = Astro.props;
const id = url.split('/').at(-2);

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---

<!-- href={`/pokemon/${id}`} -->
<a
  href={`/pokemons/${name}`}
  class:list={[
    `max-w-sm p-6`,
    {
      'bg-yellow-400 border border-gray-200 rounded-lg shadow': !isDetail
    }

  ]}
>
  <img
    transition:name={`${name}-image`}
    class:list={[
      {'rounded-t-lg w-26 h-26': isDetail},
      {'rounded-t-lg': !isDetail},

    ]} 
    src={ imageSrc } 
    alt={ name } 
  />
  
  <h1 class="mt-3 font-medium text-center text-slate-800 capitalize">
    { name }
  </h1>
</a>

